extends layout

block head
  if (modal)
    script(type='text/javascript').
      $(document).ready(function() {
        $('#signin-modal').modal();
      });
  if (email)
    script(type='text/javascript').
      $(document).ready(function() {
        $('#comment-header').text("We're currently an invitation-only network. Please tell us about yourself and we'll get back to you soon.");
        $('#email-input').val('#{email}');
        $('#comment-modal').modal();
      });

block content
  // Modals.
  // Signin modal.
  div#signin-modal.modal(tabindex='-1', role='dialog', aria-labelledby='signin-modal-label', aria-hidden='true')
    div.modal-dialog
      div.modal-content
        div#signin-body.modal-body
          a(data-dismiss='modal', aria-hidden='true')
            span#signin-modal-close.glyphicon.glyphicon-remove-circle
          div#signin-google
            a(href='http://accounts.' + domain + '/auth/google')
              img(src='/static/img/Red-signin_Long_base_32dp.png')
        div.modal-footer
          p By signing in with Google, you agree to our
            <a href='#'>Terms of Service</a> & <a href='#'>Privacy Policy</a>
  // Extra comment modal
  div#comment-modal.modal(tabindex='-1', role='dialog', aria-labelledby='comment-modal-label', aria-hidden='true')
    div.modal-dialog
      div.modal-content
        div.modal-header
          h4#comment-header Please share any comments you have with us. <span class="text-muted">(Optional)</span>
        div.modal-body
          h4 What is your role?
          div.checkbox
            label
              input#developer-checkbox(type='checkbox', value='true')
              | Developer
          div.checkbox
            label
              input#advertiser-checkbox(type='checkbox', value='true')
              | Advertiser
          hr
          textarea#comment.form-control(rows='3', placeholder="What has been your experience with mobile advertising?")
        div.modal-footer
          button#send-info.btn.btn-primary(type='button', data-dismiss='modal')
            strong OK
  // Top of page.
  div#home
    div#dark-overlay
      div.container
        div#home-content.row
          div.col-md-6
            h1#tagline SEND CONTENT TO YOUR APP.
          div#get-started-container.col-md-6
            a#get-started(href='http://developer.' + domain, data-toggle='modal') GET STARTED

  // About.
  div#about
    div.container
      div.row.featurette
        div.col-md-7.col-md-offset-1
          h1.featurette-heading.text-muted Developers
          p.about-text Carefully-crafted advertisements outperform generic display ads. Join our network of developers and use our platform to enhance your app users<span class="hide">'</span>' experience with creative content from top-notch brands.
        div.col-md-3
          img.featurette-image.img-responsive.pull-right.img-circle(src='/static/img/Developer.png')
      hr.about-divider
      div.row
        div.col-md-3.col-md-offset-1
          img.featurette-image.img-responsive.img-circle(src='/static/img/Advertiser.png')
        div.col-md-7
          h1.featurette-heading.text-muted Advertisers
          p.about-text Quality advertising requires thoughtful integration with apps. We work directly with publishers to connect your brand with the right audience in innovative ways.
  // Contact.
  div#contact
    div.container
      h1.text-muted Contact Us
      div#contact-form
        div#contact-error.alert.alert-danger.hide
          button.close(type='button', aria-hidden='true') &times;
          strong <span id='contact-error-text'>Error! Please try again.</span>
        div#contact-success.alert.alert-success.hide
          button.close(type='button', data-dismiss='alert', aria-hidden='true') &times;
          strong Your message has been sent.
        input#contact-email.form-control(placeholder='Your email')
        input#contact-name.form-control(placeholder='Your name')
        textarea#contact-comment.form-control(rows='5', placeholder="Your message")
        button#contact-send Send
  // Team.
  div#team
    div.container
      div.col-lg-6
        a(href='https://twitter.com/theBrandonWu', target='_blank')
          img.img-circle.img-team(src='/static/img/BrandonWu-140x140.jpg', alt='Photo of Brandon Wu')
        h2.team-member Brandon Wu
        p.team-text Brandon founded a mobile game company, worked as a strategist at Sony, and managed a QA team at EA. He also organizes a game developer community in Seattle with 600+ members.
      div.col-lg-6
        a(href='http://www.jamespasko.com', target='_blank')
          img.img-circle.img-team(src='/static/img/JamesPasko-140x140.jpg', alt='Photo of James Pasko')
        h2.team-member James Pasko
        p.team-text James designed software for Google, built a portfolio-management service for artists, and developed signal processing algorithms for medical imaging devices in graduate school.
  // Location.
  div#location
    iframe(width='100%', height='200', frameborder='0', scrolling='no', marginheight='0', marginwidth='0', src="https://www.google.com/maps?t=m&q=2820+Elliott+Avenue,+Seattle,+WA&ie=UTF8&hq=&hnear=2820+Elliott+Ave,+Seattle,+Washington+98121&z=15&ll=47.615561,-122.353689&output=embed&iwloc=near")
